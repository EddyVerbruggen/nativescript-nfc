{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2017",
    "declaration": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "lib": ["es6", "dom", "es2017"],
    "baseUrl": ".",
    "paths": {
      "*": ["./node_modules/tns-core-modules/*", "./node_modules/*"],
      "~/*": ["app/*"]
    },
    "moduleResolution": "node",
    "removeComments": false
  },
  "exclude": ["e2e", "node_modules", "platforms", "**/*.aot.ts"]
}
