<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded">
  <ScrollView>
    <StackLayout>

      <Image margin="0" src="~/res/nfc.png" width="60%" align="center" />

      <StackLayout orientation="horizontal" width="100%">
        <Button text="NFC available?" tap="{{ doCheckAvailable }}" cssClass="button button-a" width="40%" />
        <Button text="NFC enabled?" tap="{{ doCheckEnabled }}" cssClass="button button-a" width="40%" align="right" />
      </StackLayout>

      <StackLayout orientation="horizontal" width="100%">
        <Button text="start tag discovery" tap="{{ doStartListeningForTagDiscovery }}" cssClass="button" width="40%"/>
        <Button text="stop tag discovery" tap="{{ doStopListeningForTagDiscovery }}" cssClass="button" width="40%" align="right"/>
      </StackLayout>

      <StackLayout orientation="horizontal" width="100%">
        <Button text="write Text" tap="{{ doWriteText }}" cssClass="button button-b" width="40%" />
        <Button text="write Uri" tap="{{ doWriteUri }}" cssClass="button button-b" width="40%" align="right" />
      </StackLayout>

      <StackLayout orientation="horizontal" width="100%">
        <Button text="erase tag" tap="{{ doEraseTag }}" cssClass="button button-c" width="40%" />
      </StackLayout>

      <Label text="{{ lastNfcTagRead }}" cssClass="message" />

    </StackLayout>
  </ScrollView>
</Page>